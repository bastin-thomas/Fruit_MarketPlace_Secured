<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI.maraicher.MaraicherActivity"
    android:background="@color/Fond_Transparent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:contentDescription="@string/imgMaraicher"
        android:scaleType="centerCrop"
        android:src="@drawable/maraicher" />

    <TextView
        android:id="@+id/titleMaraicher"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/titleMaraicher"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <!-- BASKET PANEL -->
    <RelativeLayout
        android:id="@+id/shopPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleMaraicher"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <!-- Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:importantForAccessibility="no" />


        <!-- Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/previous"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <EditText
                android:id="@+id/quantityEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:background="@color/Fond_Caddie"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minWidth="48dp"
                android:minHeight="40dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:text="0"
                android:textColor="#000000"
                tools:ignore="LabelFor,DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/addCaddieButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/add"
                android:textColor="@color/white"
                android:textSize="10sp"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageView"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/articleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/product"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/articleListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:importantForAutofill="no"
                    android:text="Un article random"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/unitPriceText"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/priceListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:importantForAutofill="no"
                    android:text="0.0"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/stockTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/stockProduct"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/stockListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:importantForAutofill="no"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/basketList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopPanel"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleCaddie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titleCaddie"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:importantForAutofill="no" />


        <ListView
            android:id="@+id/caddieListView"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@color/Fond_Caddie"
            android:contextClickable="true" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/basketPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/basketList"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/basketPanel"
                android:gravity="center"
                android:text="@string/deleteButton"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:text="@string/total"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/totalText"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:importantForAutofill="no"
                android:text="0.000000"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/finished"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/deleteAllButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deleteAllButton"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/confirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deleteAllButton"
                android:layout_centerHorizontal="true"
                android:text="@string/confirmButton"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/finished"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:minHeight="48dp"
            android:onClick="disconnect"
            android:text="@string/disconnectButton"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>
</RelativeLayout>
